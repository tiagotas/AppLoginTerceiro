<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppLoginTerceiro.View.Login"
             BackgroundColor="Purple"
             Padding="10">
    <ContentPage.Content>
        <StackLayout>
            <Frame CornerRadius="10" 
                   VerticalOptions="CenterAndExpand">
                <StackLayout>
                    <Label Text="Login de Usuários:" />

                    <Label Text="E-mail:" />
                    <Entry x:Name="txt_email" Placeholder="Seu email de cadastro" />

                    <Label Text="Senha:" />
                    <Entry x:Name="txt_senha" Placeholder="Sua senha" IsPassword="True" />

                    <Button Text="Entrar" Clicked="Button_Clicked" />
                </StackLayout>
            </Frame>        
        </StackLayout>
    </ContentPage.Content>
</ContentPage>